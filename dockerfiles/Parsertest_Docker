FROM ubuntu:20.04

ENV TZ=Europe/Budapest
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN apt-get update && apt-get install -y \
  make \
    g++ \
    g++-10 \
    gcc \
    valgrind \
    cppcheck \
    sudo \
    libgtest-dev \
    cmake \
    build-essential \
    && apt-get install -y git \
&& rm -rf /var/lib/apt/lists/*
